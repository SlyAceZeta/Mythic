<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    mc:Ignorable="d">

    <Style TargetType="{x:Type DetailsViewGameOverview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DetailsViewGameOverview}">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto"
                                  Style="{DynamicResource DetailsScrollViewer}"
                                  d:DesignWidth="1280"
                                  d:DesignHeight="1550"
                                  d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}"
                                  x:Name="PART_ScrollViewHost">
                        <Grid Margin="0,0,0,20">
                            
                            <!-- Background Image -->
                            <Grid VerticalAlignment="Top">
                                <Grid.Style>
                                    <Style TargetType="{x:Type Grid}">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=HasDataBackground, FallbackValue=False}" Value="True" />
                                                    <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=EnableBackgroundImage, FallbackValue=False}" Value="True" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding ElementName=PART_ImageBackground, Path=Visibility}" Value="Collapsed" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <FadeImage x:Name="PART_ImageBackground" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Top" />
                                <Border Background="{StaticResource DarkNoiseBrush}" IsHitTestVisible="False"
                                        Height="{Binding ElementName=PART_ImageBackground, Path=Height}"
                                        Opacity="{DynamicResource DetailsBackgroundDarkenLayerOpacityValue}" />
                                <Grid.OpacityMask>
                                    <RadialGradientBrush GradientOrigin="0.5,0" Center="0.5,0" RadiusX="2" RadiusY="0.9">
                                        <RadialGradientBrush.GradientStops>
                                            <GradientStop Color="Black" Offset="0.3" />
                                            <GradientStop Color="Transparent" Offset="0.85" />
                                        </RadialGradientBrush.GradientStops>
                                    </RadialGradientBrush>
                                </Grid.OpacityMask>
                            </Grid>

                            <!-- BackgroundChanger plugin background -->
                            <Grid VerticalAlignment="Top">
                                <ContentControl x:Name="BackgroundChanger_PluginBackgroundImage"
                                                HorizontalAlignment="Center" VerticalAlignment="Top" />
                                <Border Background="{StaticResource DarkNoiseBrush}" IsHitTestVisible="False"
                                        Opacity="{DynamicResource DetailsBackgroundDarkenLayerOpacityValue}" />
                                <Grid.OpacityMask>
                                    <RadialGradientBrush GradientOrigin="0.5,0" Center="0.5,0" RadiusX="2" RadiusY="0.9">
                                        <RadialGradientBrush.GradientStops>
                                            <GradientStop Color="Black" Offset="0.3" />
                                            <GradientStop Color="Transparent" Offset="0.85" />
                                        </RadialGradientBrush.GradientStops>
                                    </RadialGradientBrush>
                                </Grid.OpacityMask>
                            </Grid>

                            <Grid HorizontalAlignment="Stretch" Margin="40,0,40,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="{Settings CalculatedGameDetailsIndentation}" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <DockPanel Margin="0,0,0,0" MaxWidth="{DynamicResource DetailsViewDetailsMaxWidth}" Grid.Row="1">
                                    <WrapPanel DockPanel.Dock="Left">
                                        <Grid Margin="0,0,0,0"
                                              Tag="{DynamicResource DetailsViewAllowUseOfLogos}" >
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableLogos, FallbackValue=False}" Value="false">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=true}" Value="false" >
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                            <Border Padding="0" Height="{PluginSettings Plugin=ExtraMetadataLoader, Path=LogoMaxHeight, FallbackValue=0}" MaxWidth="{PluginSettings Plugin=ExtraMetadataLoader, Path=LogoMaxWidth, FallbackValue=0}" />
                                            <ContentControl x:Name="ExtraMetadataLoader_LogoLoaderControl" />
                                        </Grid>
                                    </WrapPanel>
                                </DockPanel>
                                <DockPanel Margin="0,20,0,0" MaxWidth="{DynamicResource DetailsViewDetailsMaxWidth}" Grid.Row="2">
                                    <!--GridConverterGridPanelCloseButton-->
                                    <WrapPanel DockPanel.Dock="Left">
                                        <Image Name="PART_ImageIcon" MaxHeight="32" MaxWidth="32" DockPanel.Dock="Left" 
                                                   Margin="0,0,10,0" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="Fant">
                                            <Image.Effect>
                                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="#0d0d0d" Opacity="0.20"/>
                                            </Image.Effect>
                                            <Image.Clip>
                                                <RectangleGeometry RadiusX="6" RadiusY="6" Rect="0,0,32,32" />
                                            </Image.Clip>
                                        </Image>

                                        <Border DockPanel.Dock="Left"
                                                Tag="{DynamicResource DetailsViewDisplayGameNameIfLogoVisible}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="False" />
                                                                <Condition Binding="{Binding ElementName=ExtraMetadataLoader_LogoLoaderControl, Path=Visibility, FallbackValue=Collapsed}" Value="Visible" />
                                                                <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}" Value="True" />
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontFamily="{DynamicResource FontFamily}" Name="PART_TextDisplayName"
                                                       FontSize="35" Margin="0,0,20,0" 
                                                       FontWeight="Bold"
                                                       TextWrapping="Wrap" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}" />
                                        </Border>

                                        <DockPanel Margin="0,0,0,0">

                                            <ContentControl x:Name="DuplicateHider_SourceSelector"
                                                            DockPanel.Dock="Left" VerticalAlignment="Center"
                                                            VerticalContentAlignment="Center"   
                                                            Margin="0,0,10,0"  
                                                            Height="24"
                                                            RenderOptions.BitmapScalingMode="Fant" />

                                            <ContentControl x:Name="NewsViewer_PlayersInGameViewerControl"
                                                            DockPanel.Dock="Left" VerticalAlignment="Center">
                                                <ContentControl.Resources>
                                                    <Style TargetType="Button" BasedOn="{StaticResource PlayersCountButtonStyle}" />
                                                </ContentControl.Resources>
                                            </ContentControl>

                                            <ContentControl x:Name="GogSecondClassWatcher_SecondClassWatcherControl"
                                                            DockPanel.Dock="Left" HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            Visibility="{PluginSettings Plugin=GogSecondClassWatcher, Path=IsControlVisible, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            Margin="10,0,0,0"/>
                                        </DockPanel>
                                    </WrapPanel>
                                </DockPanel>

                                <DockPanel Grid.Row="3" MaxWidth="{DynamicResource DetailsViewDetailsMaxWidth}"
                                           Margin="0,0,0,0">
                                    <DockPanel.Style>
                                        <Style TargetType="DockPanel">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=TopCommunityScorePanel, Path=Visibility}" Value="Visible">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=LibraryManagement_PluginFeaturesIconList, Path=Visibility}" Value="Visible">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DockPanel.Style>
                                    <StackPanel x:Name="TopCommunityScorePanel" Orientation="Horizontal"
                                                DockPanel.Dock="Left"
                                                Margin="0,0,10,0" ToolTip="{DynamicResource LOCCommunityScore}"
                                                Visibility="{Binding ElementName=PART_TextCommunityScore, Path=Visibility}">
                                        <ContentControl Content="{Binding Game.CommunityScore}"
                                                        Padding="0,0,6,0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        Background="Transparent"
                                                        Foreground="{DynamicResource TextBrush}"
                                                        Height="18"
                                                        ContentTemplate="{StaticResource FiveStarScoreTemplate}"/>

                                        <TextBlock Text="{Binding Game.CommunityScore}"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource TextBrush}" />
                                    </StackPanel>

                                    <ContentControl x:Name="LibraryManagement_PluginFeaturesIconList" Height="32" Margin="0,0,0,0"
                                                    Visibility="{PluginSettings Plugin=LibraryManagement, Path=EnableIntegrationFeatures, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                    DockPanel.Dock="Left"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left" 
                                                    Opacity="0.85" />
                                </DockPanel>

                                <DockPanel Grid.Row="4" MaxWidth="{DynamicResource DetailsViewDetailsMaxWidth}"
                                           Visibility="{PluginSettings Plugin=CheckLocalizations, Path=EnableIntegrationFlags, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ContentControl x:Name="CheckLocalizations_PluginFlags" Height="20" Margin="0,8,0,0"
                                                    HorizontalAlignment="Left" 
                                                    Opacity="0.85" />
                                </DockPanel>
                                
                                <DockPanel MaxWidth="{DynamicResource DetailsViewDetailsMaxWidth}" Grid.Row="5" >
                                    <StackPanel DockPanel.Dock="Right" Width="{DynamicResource DetailsViewDetailsColumnWidth}" Margin="20,0,0,0">

                                        <!--#region Logo & Cover Image-->
                                        <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,-500,0,0">
                                            <Border Grid.Row="1" Background="Transparent"
                                                        Visibility="{Binding ElementName=CoverGridContainer, Path=Visibility}"
                                                        HorizontalAlignment="Center" VerticalAlignment="Bottom"
                                                        Width="{Binding ElementName=CoverGridContainer, Path=ActualWidth}"
                                                        Height="{Binding ElementName=CoverGridContainer, Path=ActualHeight}"
                                                        Padding="0.5">
                                                <Border Background="Transparent"
                                                        CornerRadius="{DynamicResource DetailsViewCoverCornerRadius}"
                                                        BorderThickness="8" BorderBrush="#0d0d0d">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="15" RenderingBias="Performance"
                                                                          ShadowDepth="0" Color="#0d0d0d" Opacity="0.3" />
                                                    </Border.Effect>
                                                </Border>
                                            </Border>
                                            <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom"
                                                  Name="CoverGridContainer">
                                                <Grid.Style>
                                                    <Style TargetType="Grid">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=PART_ImageCover, Path=Visibility}" Value="Visible">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ElementName=BackgroundChanger_PluginCoverImage, Path=Visibility}" Value="Visible">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Grid.Style>
                                                <Border Name="Mask" Background="White" CornerRadius="{DynamicResource DetailsViewCoverCornerRadius}" />
                                                <Border>
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=BackgroundChanger_PluginCoverImage, Path=Visibility}" Value="Visible">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Image Name="PART_ImageCover" MaxHeight="{Settings GameDetailsCoverHeight}"
                                                       MaxWidth="{DynamicResource DetailsViewDetailsColumnWidth}"
                                                       StretchDirection="Both" Stretch="Uniform"
                                                       RenderOptions.BitmapScalingMode="Fant"/>
                                                </Border>

                                                <ContentControl x:Name="BackgroundChanger_PluginCoverImage"
                                                            MaxHeight="{Settings GameDetailsCoverHeight}">
                                                    <ContentControl.Style>
                                                        <Style TargetType="ContentControl">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=HasDataCover, FallbackValue=False}" Value="True" />
                                                                        <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=EnableCoverImage, FallbackValue=False}" Value="True" />
                                                                    </MultiDataTrigger.Conditions>
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </MultiDataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ContentControl.Style>
                                                </ContentControl>
                                                
                                                <Grid.OpacityMask>
                                                    <VisualBrush Visual="{Binding ElementName=Mask}" />
                                                </Grid.OpacityMask>
                                            </Grid>
                                        </Grid>

                                        <!--#regionend-->

                                        <Button Grid.Column="0" HorizontalAlignment="Stretch"
                                                Margin="0,20,0,0"
                                                VerticalAlignment="Stretch" Name="PART_ButtonPlayAction"
                                                Height="48" Style="{DynamicResource PlayButtonViews}" />
                                        <Button HorizontalAlignment="Stretch"
                                                Margin="0,20,0,0"
                                                Height="48" VerticalAlignment="Stretch"
                                                Name="PART_ButtonContextAction" Style="{DynamicResource ContextButtonViews}" />
                                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="{DynamicResource DetailsViewDetailsColumnWidth}" Margin="0,10,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Button Grid.Column="0" Name="PART_ButtonMoreActions" Height="40" Content="{DynamicResource LOCMoreAction}" FontFamily="{DynamicResource FontIcoFont}" Margin="0,0,5,0" Style="{DynamicResource MoreActionButtonViews}" Padding="0" />
                                            <Button Grid.Column="1" x:Name="PART_ButtonEditGame" Content="{DynamicResource LOCEditGame}" Margin="5,0,0,0" Height="40" Focusable="False" FontFamily="{DynamicResource FontIcoFont}" Style="{DynamicResource MoreActionButtonViews}" />
                                        </Grid>


                                        <WrapPanel>
                                            <ToggleButton Name="GameFavoriteToggleButton" Margin="0,10,10,0" Focusable="False"
                                                              Style="{DynamicResource PanelFavoriteToggleButton}"
                                                              Height="40"
                                                              Visibility="{PluginStatus Plugin=felixkmh_Extras_Plugin}"
                                                              IsChecked="{PluginSettings Plugin=ThemeExtras, Path=Game.Favorite, Mode=TwoWay, FallbackValue={StaticResource False}}"/>
                                            <ContentControl x:Name="PlayState_GameStateSwitchControl" Height="40" Margin="0,10,10,0"
                                                            Visibility="{PluginSettings Plugin=PlayState, Path=IsControlVisible, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="ScreenshotsVisualizer_PluginButton" Margin="0,10,10,0"
                                                            Height="40" MaxWidth="150" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=ScreenshotsVisualizer, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="HowLongToBeat_PluginButton" Height="40" VerticalAlignment="Center" Margin="0,10,10,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=HowLongToBeat, Path=EnableIntegrationButton, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="CheckDlc_PluginButton" Height="40" VerticalAlignment="Center" Margin="0,10,10,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=CheckDlc, Path=EnableIntegrationButton, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="SuccessStory_PluginButton" Height="40" VerticalAlignment="Center" Margin="0,10,10,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=SuccessStory, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="GameActivity_PluginButton" Height="40" VerticalAlignment="Center" Margin="0,10,10,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=GameActivity, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="SystemChecker_PluginButton" Height="40" VerticalAlignment="Center" Margin="0,10,10,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=SystemChecker, Path=EnableIntegrationButton, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="CheckLocalizations_PluginButton" Height="40" VerticalAlignment="Center" Margin="0,10,10,0" DockPanel.Dock="Left"
                                                            Visibility="{PluginSettings Plugin=CheckLocalizations, Path=EnableIntegrationButton, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        </WrapPanel>
                                        
                                        <!--#region Game Details-->
                                        <!--<TextBlock Text="{DynamicResource LOCGameDetails}" Margin="0,15,0,5" FontWeight="Bold" Foreground="{DynamicResource DetailsViewDetailsLabelForegroundBrush}" />
                                        <Separator Background="{DynamicResource DetailsViewSeparatorBrush}" />-->
                                        <StackPanel Margin="0,20,0,10" Grid.IsSharedSizeScope="True">
                                            <StackPanel.Resources>
                                                <Style x:Key="Icon" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                                    <Setter Property="Width" Value="24"/>
                                                    <Setter Property="Foreground" Value="{DynamicResource GlyphBrush}"/>
                                                </Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                                    <Setter Property="Foreground" Value="{DynamicResource DetailsDarkForegroundBrush}" />
                                                    <Setter Property="HorizontalAlignment" Value="Left" />
                                                    <Setter Property="VerticalAlignment" Value="Center" />
                                                    <Setter Property="Margin" Value="0,0,0,0" />
                                                </Style>
                                                <Style TargetType="Label">
                                                    <Setter Property="FontWeight" Value="Normal" />
                                                    <Setter Property="Foreground" Value="{DynamicResource DetailsDarkForegroundBrush}" />
                                                    <Setter Property="VerticalAlignment" Value="Center" />
                                                    <Setter Property="Margin" Value="0,0,0,0" />
                                                </Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Padding" Value="0,5,0,5" />
                                                    <Setter Property="BorderBrush" Value="#1affffff" />
                                                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                                                </Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource PropertyItemButton}">
                                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                                    <Setter Property="HorizontalContentAlignment" Value="Right" />
                                                    <Setter Property="VerticalAlignment" Value="Center" />
                                                </Style>

                                            </StackPanel.Resources>

                                            <Border Name="PART_ElemRecentActivity">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEC45;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCRecentActivityLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Grid.Column="1" Name="PART_TextRecentActivity" HorizontalAlignment="Right" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemInstallDirectory">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEC5B;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGameInstallDirTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Grid.Column="1" Name="PART_ButtonInstallDirectory" VerticalAlignment="Center" HorizontalAlignment="Right" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemInstallSize">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xef43;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCInstallSizeLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Grid.Column="1" Name="PART_TextInstallSize" HorizontalAlignment="Right" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemAdded">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEC45;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCDateAddedLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Grid.Column="1" Name="PART_TextAdded" HorizontalAlignment="Right" />
                                                </Grid>
                                            </Border>
                                            
                                            <Border Name="PART_ElemLibrary">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEF65;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGameProviderTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Grid.Column="1" Name="PART_ButtonLibrary" VerticalAlignment="Center" HorizontalAlignment="Right" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemSource">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEF65;" Style="{StaticResource Icon}"
                                                                       FontFamily="{StaticResource FontIcoFont}" 
                                                                       Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCSourceLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Grid.Column="1" Name="PART_ButtonSource" HorizontalAlignment="Right" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemPlatform">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEEEE;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGamePlatformTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Grid.Column="1" Name="PART_ItemsPlatforms" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemCategories">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEF74;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGameCategoriesTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Grid.Column="1" Name="PART_ItemsCategories" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemReleaseDate">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Left"/>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEC45;" Style="{StaticResource Icon}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource DetailsViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGameReleaseDateTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Grid.Column="1" Name="PART_ButtonReleaseDate" HorizontalAlignment="Right" />
                                                </Grid>
                                            </Border>

                                            <Border Name="PART_ElemDevelopers">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
